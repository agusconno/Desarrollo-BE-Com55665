<div class="vh-100">
  <table class="table" id="productsTable">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Thumbnail</th>
        <th>Price</th>
        <th>Code</th>
        <th>Stock</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="productsBody">
      {{#each products}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td><img src="{{this.thumbnail}}" alt="{{this.title}}" style="max-width: 50px;"></td>
          <td>{{this.price}}</td>
          <td>{{this.code}}</td>
          <td>{{this.stock}}</td>
          <td>
            <button class="btn btn-outline-warning btn-sm" onclick="editProduct('{{this.id}}')">âœŽ</button>
            <button class="btn btn-outline-danger btn-sm" onclick="deleteProduct('{{this.id}}')">ðŸ—‘</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <!-- BotÃ³n Nuevo producto -->
  <button type="button" onclick="openModal()" class="btn btn-sm btn-primary position-fixed bottom-0 end-0 py-2 px-2 shadow">+</button>

  <!-- Nuevo producto -->
  <div id="modal" class="modal" style="display: none;">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h5>Nuevo producto</h5>
      <form id="newProductForm">
        <div class="mb-3">
          <label for="title">TÃ­tulo</label>
          <input autocomplete="off" type="text" id="title" name="title">
        </div>
        <!-- Agrega los campos restantes del formulario -->
        <div class="modal-footer">
          <button type="button" onclick="closeModal()" class="btn btn-danger">Cerrar</button>
          <button type="submit" class="btn btn-primary">Registrar producto</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function openModal() {
    document.getElementById('modal').style.display = 'block';
  }

  function closeModal() {
    document.getElementById('modal').style.display = 'none';
  }

  // Manejar el evento de envÃ­o del formulario 
  document.getElementById('newProductForm').addEventListener('submit', function (event) {
    event.preventDefault();

    const newProductData = {
      title: document.getElementById('title').value,
     
    };

   
    socket.emit('newProduct', newProductData);

    closeModal();
  });
</script>


